generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email               String?     @unique
  role                String      @default("USER")
  addressApt          String?     @map("address_apt")
  addressFloor        String?     @map("address_floor")
  addressStreet       String?     @map("address_street")
  addressStreetNumber String?     @map("address_street_number")
  authProvider        String?     @map("auth_provider")
  createdAt           DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  emailVerified       Boolean     @default(false) @map("email_verified")
  firebaseUid         String?     @unique @map("firebase_uid")
  firstName           String?     @map("first_name")
  interestedIn        String?     @map("interested_in")
  isDelete            Boolean     @default(false) @map("is_delete")
  isNewsletter        Boolean     @default(false) @map("is_newsletter")
  language            String?
  lastName            String?     @map("last_name")
  phone               String?     @unique
  pointsBalance       Int         @default(0) @map("points_balance")
  updatedAt           DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)
  id                  String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  lastLoginAt         DateTime?   @map("last_login_at") @db.Timestamptz(6)
  phoneVerifiedAt     DateTime?   @map("phone_verified_at") @db.Timestamptz(6)
  signupCompletedAt   DateTime?   @map("signup_completed_at") @db.Timestamptz(6)
  birthday            DateTime    @db.Date
  addressCity         String?     @map("address_city")
  cartItems           CartItem[]
  favorites           Favorite[]
  orders              Order[]
  points              Points[]

  @@map("users")
}

model CartItem {
  id         String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId     String         @map("user_id") @db.Uuid
  cartKey    String         @map("cart_key")
  baseSku    String         @map("base_sku")
  colorSlug  String?        @map("color_slug")
  sizeSlug   String?        @map("size_slug")
  quantity   Int
  unitPrice  Decimal?       @map("unit_price") @db.Decimal(10, 2)
  status     CartItemStatus @default(IN_CART)
  orderId    String?        @map("order_id")
  removedAt  DateTime?      @map("removed_at") @db.Timestamptz(6)
  createdAt  DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime       @updatedAt @map("updated_at") @db.Timestamptz(6)
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cartKey])
  @@index([userId, status])
  @@index([userId, updatedAt(sort: Desc)])
  @@map("cart_items")
}

model Favorite {
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId         String    @map("user_id") @db.Uuid
  productBaseSku String    @map("product_base_sku")
  colorSlug      String    @default("") @map("color_slug")
  isActive       Boolean   @default(true) @map("is_active")
  favoritedAt    DateTime  @default(now()) @map("favorited_at") @db.Timestamptz(6)
  unfavoritedAt  DateTime? @map("unfavorited_at") @db.Timestamptz(6)
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productBaseSku, colorSlug])
  @@index([userId, isActive])
  @@map("favorites")
}

model NewsletterEmails {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)

  @@map("newsletter_emails")
}

model Category {
  id          String     @id @default(cuid())
  description String?
  image       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  isEnabled   Boolean    @default(true)
  level       Int        @default(0)
  name_en     String     @unique
  name_he     String     @unique
  parentId    String?
  slug_en     String     @unique
  slug_he     String     @unique
  sortOrder   Int        @default(0)
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]  @relation("CategoryProducts")

  @@map("categories")
}

