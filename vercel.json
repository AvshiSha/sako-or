{
  "functions": {
    "app/api/webhook/cardcom/route.ts": {
      "maxDuration": 30
    },
    "app/api/cron/inventory-sync/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/inventory-sync-neon/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/inventory-sync",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/cron/inventory-sync-neon",
      "schedule": "15 */3 * * *"
    },
    {
      "path": "/api/cron/verifone-points-sync",
      "schedule": "0 */2 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/webhook/cardcom",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, x-cardcom-signature"
        }
      ]
    },
    {
      "source": "/.well-known/apple-developer-merchantid-domain-association",
      "headers": [
        { "key": "Content-Type", "value": "text/plain" },
        { "key": "Content-Disposition", "value": "inline" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/webhook/cardcom",
      "destination": "/api/webhook/cardcom"
    }
  ]
}